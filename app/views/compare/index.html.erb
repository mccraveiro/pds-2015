<header>
  <%= render "header" %>
  <form action="/compare" method="GET" class="form-inline" id="filter-form">
    <div class="container-fluid toolbar toolbar-compare">
      <div class="col-xs-12">
        <%= render "filters", index: "1" %>
      </div>
    </div>
    <div class="container-fluid toolbar toolbar-compare">
      <div class="col-xs-12">
        <%= render "filters", index: "2" %>
      </div>
    </div>
  </form>
</header>

<div class="container-fluid" id="chartContainer">
  <div class="col-xs-12" id="chartCol">
    <h2 class="header-gastos text-muted">Gr√°fico comparativo</h2>
    <div class="ct-chart ct-perfect-fourth chartist" id="chartComparison"></div>
  </div>
</div>

<% if current_user %>
  <script type="text/javascript">
    comparisonBuildCharts(<%= @months.to_json.html_safe %>, <%= @totais.to_json.html_safe %>, 1);
  </script>
<% else %>
  <script type="text/javascript">
    comparisonBuildCharts(<%= @months.to_json.html_safe %>, <%= @totais.to_json.html_safe %>, 0);
  </script>
<% end %>

<div class="container-fluid">
  <div class="col-xs-12">
    <%= render "panel", index: "1" %>
    <%= render "panel", index: "2" %>
  </div>
</div>

<div class="container-fluid footer">
  <% if !current_user %>
    <div class="col-xs-12 text-center text-muted">
      <a href="/cadastre-se">Cadastre-se</a> para acessar os dados granulares e salvar suas consultas
    </div>
  <% end %>
  <%= render "copyright" %>
</div>
