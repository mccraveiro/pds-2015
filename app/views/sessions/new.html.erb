<header>
  <%= render "main/header" %>
</header>
<div class="container-fluid">
  <div class="col-xs-12 col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">Login</div>
      <div class="panel-body">
        <% if flash[:error] %>
          <div class="alert alert-danger" role="alert"><%= flash[:error] %></div>
        <% end %>
        <%= form_for(:session, :url => {:controller => 'sessions', :action => 'create'}, html: {class: 'form-horizontal'}) do |f| %>
          <div class="form-group">
            <%= f.label :email, value: 'E-mail', class: 'control-label col-md-2 col-md-offset-1' %>
            <div class="col-md-8">
              <%= f.text_field :email, class: 'form-control', placeholder: 'E-mail' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password, value: 'Senha', class: 'control-label col-md-2 col-md-offset-1' %>
            <div class="col-md-8">
              <%= f.password_field :password, class: 'form-control', placeholder: 'Senha' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-offset-3 col-md-8">
              <%= f.submit :signin, value: 'Entrar', class: 'btn btn-primary btn-block' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid footer">
  <div class="col-xs-12 text-center text-muted">
    Caso não possua cadastro, acesse a página de <a href="/cadastre-se">cadastro</a>
  </div>
  <%= render "main/copyright" %>
</div>
