<header>
  <%= render "header" %>
  <div class="container-fluid toolbar">
    <div class="col-xs-12">
      <%= render "filters" %>
    </div>
  </div>
</header>
<div class="container-fluid">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">2014</div>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <% @months.each do |month| %>
                <% if params[:month] == '' || month.value == params[:month] %>
                  <th class="text-center"><%= month.name %></th>
                <% end %>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <tr>
              <tr>
                <% @totais.each do |total| %>
                  <td class="text-center text-nowrap">R$ <%= total %></td>
                <% end %>
                <% if @totais.count > 1 %>
                  <td class="text-center text-nowrap">R$ <%= @total %></td>
                <% end %>
              </tr>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<% if current_user %>
  <div class="container-fluid">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">Listagem de gastos</div>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th class="text-center">Orgão</th>
                <th class="text-center">Domínio</th>
                <th class="text-center">Subdomínio</th>
                <th class="text-center">Natureza</th>
                <th class="text-center">Valor</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <tr>
                  <% @despesas.each do |despesa| %>
                    <tr>
                      <td class="text-center text-nowrap"> <%= despesa.descricaoOrgao %></td>
                      <td class="text-center text-nowrap"> <%= despesa.descricaoDominio %></td>
                      <td class="text-center text-nowrap"> <%= despesa.descricaoSubDominio %></td>
                      <td class="text-center text-nowrap"> <%= despesa.descricaoNatureza %></td>
                      <td class="text-center text-nowrap"> R$ <%= despesa.valor %></td>
                    </tr>
                  <% end %>
                </tr>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="container-fluid footer">
  <% if !current_user %>
    <div class="col-xs-12 text-center text-muted">
      <a href="/cadastre-se">Cadastre-se</a> para acessar os dados granulares e salvar suas consultas
    </div>
  <% end %>
  <%= render "copyright" %>
</div>
